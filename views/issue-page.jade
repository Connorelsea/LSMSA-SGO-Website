doctype html
html(lang="en")

	include header

	body

		include navigation

		div.body

			if alert
				div.ialert.bar
					div.innerContainer
						h1.atitle!= alertTitle
						p.abody!= alertBody

			div.singleIssue.bar

				div.container

					div.left

						div.top
							h1= issue.title
							h3= "Submitted On " + issue.date.toDateString() + " at " + issue.date.getHours() + ":" + issue.date.getMinutes() + ":" + issue.date.getSeconds()

						div.bottom
							//h5 Hover for easy reading mode
							p= issue.body

					div.right

						div.stats

							div.left

								div.row.rowOne
									h3
										span.number #{issue.likes}
										span.word Upvotes

								div.row.rowTwo
									h3 
										span.number #{issue.views}
										span.word Views

								div.row.rowThree
									h3 
										span.number ~5
										span.word Shares

							div.right
								div.barOne
								div.barTwo
								div.barThree

						div.share
							a(href="") Share to Facebook
							a(href="") Share to Twitter
							a(href="") Share as Link

			div.comments.bar
				
				div.commentContainer

					div.submitContainer

						form(name="add-comment", method="post")

							div.text
								textarea(name="comment")

							div.submitArea
								input(type="submit", value="Comment")

					div.childrenContainer
						each comment in issue.comments
							div.commentBox
								p= comment.body

