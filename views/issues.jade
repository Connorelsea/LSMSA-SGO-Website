extends template

block t-title-h1
	h1 Issue Board

block t-title-h2
	h2 Student-Submitted Issues

block content

		//div.issueContainer.ics
		div.mIssueContainer

			div.sortSwitcher
				h4 Sort By...
				if filter === "top"
					a(href="/issues").first Recent
					a(href="/issues?filter=top").highlight Top
				else if filter === "recent"
					a(href="/issues").first.highlight Recent
					a(href="/issues?filter=top") Top

			if rows.length > 0
				each val in rows
					// +createIssueBox(val)
					+createMaterialIssueBox(val)

				div.addMore
					h1 You can be the voice of change
					div.multButtons
						a(href="/issues/submit").submit-button.first Submit an Issue
			else
				div.addMore
					h1 There are no issues currently
					a(href="/issues/submit").submit-button Submit an Issue