mixin list(list)
	ul
		each val in list
			li(class!=attributes.class)
				a(href= val.link)= val.name

// Main Navigation
// This creates the main navigation list and children.
mixin createMainNav(list, user)
	ul
		each val in mainNavigation
			li

				if val.name == 'Login'
					if user
						a(href="#") Profile
						ul.login
							li= user.name
							li
								p.desc You are logged in under a verified LSMSA email account. Your account is currently under the email #{user.email}.
							li
								a(href="/logout") Logout
					else
						a(href="/login") Login

				else
					a(href= val.link)= val.name

					if val.sub.length > 0
						ul.sub
							each subval in val.sub
								li
									a(href= subval.link)= subval.name

// Issue Box
// Creates a singular issue based on the argument
mixin createIssueBox(row)
	div.issueBox

		div.arrows
			a(href="").uplink
				img(src="").upimg
			a(href="").downlink
				img(src="").downimg

		div.votes

			div.top

				div.score

					if row.likeCount <= 0
						p.zero= row.likeCount
					else
						p.positive= "+" + row.likeCount

				div.stars
					
					if row.likeCount == 0
					else if row.likeCount <= 5
						p *
					else if row.likeCount <= 10
						p * *
					else if  row.likeCount > 10
						p * * *

			div.bottom
				p Issue

		div.content

			div.top
				h2= row.title
				a(href="").button-issue.primary SGO Response 

			div.bottom
				h3 Submitted by anonymous

		div.social

			div.top
				a(href="").link Read More...
				a(href="").link Discuss...
				a(href="").link Share...

			div.bottom
				p 20+ Responses