mixin list(list)
	ul
		each val in list
			li(class!=attributes.class)
				a(href= val.link)= val.name

mixin createLoginButton(user)

	if user
		a(href="/").login= user.name
			div.info
				h1 Welcome #{user.name}
				p You are logged into the LSMSA SGO Website.
				p Email: #{user.email}

	else
		a(href="/login") Login/Signup

mixin createMainNav(list, user)
	ul
		each val in mainNavigation
			li

				if val.name == 'Login'
					if user
						a(href="#") Profile
						ul.login
							li= user.name
							li
								p.desc You are logged in under a verified LSMSA email account. The email you are logged in with currently is #{user.email}.
							li
								a(href="/logout") Logout
					else
						a(href="/login") Login

				else
					a(href= val.link)= val.name

					if val.sub.length > 0
						ul.sub
							each subval in val.sub
								li
									a(href= subval.link)= subval.name