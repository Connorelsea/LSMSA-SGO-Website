doctype html
html(lang="en")

	head
		title= title
		include mixins.jade

		link(rel='stylesheet', href='/css/index.css')

		script(src="/scripts/jquery.js")
		script(src="/scripts/animationHeader.js")

	body

		div.bar.barMain
			div.innerBar

				header

					div.image
						img(src= "images/logo.png").img

					div.nav
						nav
							+createMainNav(list, user)

		div.contentBody

			div.background
				div.cover.primaryCover
				div.cover.secondaryCover
				div.cover.tertiaryCover

			div.bar.foreground

				div.bar.actionBar
					div.innerBar

						div.action
							div.header
								h1.primary Make a 
								h1.secondary Difference
							div.sub
								a(href="#issue").button.primary Issue Board
								a(href="#about").button.secondary About

				div.bar.newsBar
					div.innerBar

						div.news

							div.story
								p Stuff goes in here

							div.buttons
								a(href="#").button.secondary Read More News
								a(href="#").button.secondary Learn About Members
								a(href="#").button.secondary View Upcoming Events


				div.bar
					div.innerBar

						div.issues