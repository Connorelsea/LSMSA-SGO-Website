.topBar
	display flex
	justify-content space-between

	max-width 1000px
	width 100%
	
	padding 16px
	padding-top 38px
	
	a
		display inline-block
		padding 8px 20px
		font-family Futura
		font-weight bold
		font-size 0.75em
		text-transform uppercase
		text-decoration none
		color lighten(_navy, 60%)
		border 1px solid lighten(_navy, 60%)
		border-radius 20px
		transition all 0.4s
		margin-right 20px
		
		&:hover
			background-color lighten(_navy, 60%)
			color _navy

.alertContainer
	display -webkit-flex
	display flex
	flex-direction column
	-webkit-flex-direction column
	align-items center
	-webkit-align-items center

	h1
		padding-top 30px
		padding-bottom 20px
		font-family Futura
		font-size 1.4em
		font-weight bold
		text-transform uppercase
		color darken(_grey, 35%)
			
	.submit-button
		text-align center
		padding 8px 25px
		margin-bottom 16px
		background-color _navy
		border 4px solid _navy
		color white
			
		font-family Futura
		font-size 0.7em
		font-weight bold
		text-transform uppercase
		text-decoration none
			
		transition all 0.4s
			
		&:hover
			background-color _grey
			color _navy

.singleIssue
	display -webkit-flex
	display flex
	justify-content center
	-webkit-justify-content center
	align-items center
	flex-direction column
	background-image url("/images/DarkBackground.png")

	.container
		min-height 270px
		display -webkit-flex
		display flex
		padding 60px
		padding-top 10px
		
		> .left
			width     700px
			min-width 700px
			max-width 700px
			
			.top
				padding-bottom 10px
				
				h1
					font-family Constantia
					font-size 3em
					color white
				
				h3
					padding-top 10px
					
					font-family Futura
					font-size 0.8em
					font-weight bold
					color _yellow
					text-transform uppercase
					
			.bottom
				padding-top 30px
				
				h5
					opacity 0.5
					font-family Constantia
					font-size 0.8em
					color #95a3d2
					padding-bottom 10px

				p
					font-family Constantia
					font-size 1.4em
					line-height 1.4em
					color white

					transition all 0.5s ease
		
		> .right
			display -webkit-flex
			display flex
			flex-direction column
			-webkit-flex-direction column
			justify-content space-between
