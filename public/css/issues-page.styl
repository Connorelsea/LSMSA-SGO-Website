			min-width 300px
			max-width 300px
			
			.stats
				display -webkit-flex
				display flex
				flex-direction row
				-webkit-flex-direction row
				justify-content space-between
				
				.left
					
					> *
						display block
						
					span
						display inline-block
						font-size 2em
						
					.number
						width 90px
						font-family Futura
						font-weight bold
						text-align right
						
					.word
						padding-left 15px
						font-family FuturaCond
						text-transform uppercase
						
					.rowOne
						color _yellow
						
					.rowTwo
						color lighten(_yellow, 20%)
						
					.rowThree
						color lighten(_yellow, 60%)
						
				.right
					display -webkit-flex
					display flex
					
					height     160px
					min-height 160px
					max-height 160px
					
					div
						margin-right 12px
						height 40px
						min-height 10px
						width 13px
						max-width 30px
						
						transition all 0.4s
						
						&:hover
							height 80%
						
					.barOne
						height 87px
						background-color _yellow
						
					.barTwo
						height 147px
						background-color lighten(_yellow, 20%)
						
					.barThree
						height 107px
						background-color lighten(_yellow, 60%)
			
