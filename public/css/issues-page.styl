.ialert
	background-color #FEBB47
	
	.innerContainer
		margin 0 auto
		width 80%
		padding 45px
		
		> *
			font-family Futura
			color #3F2E12
			
		strong
			font-weight bold
			
		.atitle
			font-weight bold
			font-size 1.68em
			text-transform uppercase
			padding-bottom 15px
			margin-bottom 15px
			
			border-bottom 2px solid #BE8C35

		.abody
			font-size 1.3em
			
			a
				color #3F2E12
				transition all 0.4s
				
				&:hover
					color lighten(#3F2E12, 20%)

.comments.bar
	display flex
	flex-direction column

.commentContainer
	width 70%
	margin 0 auto
	
	.submitContainer
		
		form
			height 100px
			margin 40px 0px
			display flex
			flex-direction row
			justify-content space-between
			
			.text
				height 100%
				width 75%
				
				textarea
					box-sizing border-box
					padding 10px
					height 100%
					width 100%
					
					font-family Futura
					font-size 1.3em
					color _navy
					
					background-color lighten(_grey, 90%)
					border none
					border-bottom 6px solid _navy
					box-shadow 0 6px 8px -1px rgba(50,50,50,0.4)
					outline none
					
			.submitArea
				height 100%
				width 20%
				
				input
					height 100%
					width 100%
					
					background-color _navy
					border 4px solid _navy
					
					font-family Futura
					font-weight bold
					font-size 1.1em
					color _grey
					text-transform uppercase
					
					cursor pointer
					transition all 0.4s
					
					&:hover
						background-color _grey
						color _navy
						
	.childrenContainer
		margin-bottom 60px
		
		.commentBox
			box-sizing border-box
			padding 30px
			margin 20px 0px
			background-color lighten(_grey, 90%)
			border none
			box-shadow 0 6px 8px -1px rgba(50,50,50,0.4)
			outline none
			
			transition all 0.4s
			
			&:hover
				padding 35px
			
			p
				color darken(_navy, 30%)
				font-family Futura
				font-size 1.2em
				line-height 1.3em