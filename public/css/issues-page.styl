.comments.bar
	display -webkit-flex
	display flex
	flex-direction column
	-webkit-flex-direction column

.commentContainer
	width 70%
	margin 0 auto
	
	.explanationContainer
		width 80%
		margin 0 auto
		font-family Futura
		font-size 1.2em
		text-align center
		color _navy
	
	.submitContainer
		
		form
			height 100px
			margin 40px 0px
			display -webkit-flex
			display flex
			flex-direction row
			-webkit-flex-direction row
			justify-content space-between
			-webkit-justify-content space-between
			
			.text
				height 100%
				width 75%
				
				textarea
					box-sizing border-box
					padding 10px
					height 100%
					width 100%
					
					font-family Futura
					font-size 1.3em
					color _navy
					
					background-color lighten(_grey, 90%)
					border none
					border-bottom 6px solid _navy
					box-shadow 0 6px 8px -1px rgba(50,50,50,0.4)
					outline none
					
			.submitArea
				height 100%
				width 20%
				
				input
					height 100%
					width 100%
					
					background-color _navy
					border 4px solid _navy
					
					font-family Futura
					font-weight bold
					font-size 1.1em
					color _grey
					text-transform uppercase
					
					cursor pointer
					transition all 0.4s
					
					&:hover
						background-color _grey
						color _navy
						
	.childrenContainer
		margin-bottom 60px
		
		.commentBox
			box-sizing border-box
			
			margin 20px 0px
			background-color lighten(_grey, 90%)
			border none
			box-shadow 0 6px 8px -1px rgba(50,50,50,0.4)
			outline none

			.studentBar
				padding 10px 30px
				background-color darken(_grey, 10%)
				
				h2
					color darken(_grey, 80%)
					font-family Futura
					
					.first
						text-transform uppercase
						
					.firstA
						font-size 0.8em

			.adminBar
				padding 20px 30px
				background-color _navy
				
				h2
					color lighten(_navy, 70%)
					font-family Futura
					font-weight bold
					
					.first
						text-transform uppercase
						
					.firstA
						font-size 0.8em
						
				h4
					font-family Futura
					font-size 0.8em
					color lighten(_navy, 70%)
					padding-top 10px
			
			p
				padding 20px 30px
				color darken(_navy, 30%)
				font-family Futura
				font-size 1.2em
				line-height 1.4em