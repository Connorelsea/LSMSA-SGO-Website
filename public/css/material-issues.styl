.mIssueContainer
	width 73%
	margin 0px auto
	
	> *
		margin 30px 0px

.mfIssueContainer
	width 93%
	margin 0px auto
	
	> *
		margin 30px 0px


.mIssueBox
	width 100% // Parent container defines width of box
	border-radius 10px
	
	box-shadow 0px 25px 48px -9px rgba(0,0,0,0.40)
	
	> .upper
		border-top-left-radius  10px
		border-top-right-radius 10px
		background-color _navy
		
		// Global styling for .upper > .innerContainer
		> .innerContainer
			width auto
			display inline-block
			
		// Inner Container: Score, Content, Info, etc
		.main
			min-height 160px
			display flex
			align-items center
			
			.area.right
				display flex
				flex-direction row
				align-items stretch
			
			.area.score
				min-width 100px
				display flex
				align-items center
				margin 0px 40px
				
				.holder
					width 100%
				
				.likes
					margin-bottom 7px
					
					p
						font-family Futura
						font-weight bold
						font-size 3.2em
						text-align center
						color _yellow
				
				.stars
					width 110%
					display flex
					justify-content space-around
					
					.starImage
						width 30px
						height 30px
						
			.area.votesDesktop
				display flex
				flex-direction column
				justify-content center
				
				margin 30px 0px
				padding-left 30px
				border-left 2px solid #293f70
				
				.mImageContainer
					
					.imageUp
						margin-bottom 10px
						transition all 0.2s
						
						&:hover
							margin-bottom 20px
					
					.imageDown
						margin-top 0px
						transition all 0.2s
						
						&:hover
							margin-top 7px
						
					.imageMain
						width 32px

			.area.content
				margin 30px 30px
				margin-right 40px
				
				a
					text-decoration none
					color _grey
					transition all 0.4s
						
					&:hover
						text-decoration underline
				
				.upper
					
					.votesMobile
						display none
						
					.title
						margin-bottom 12px
						
						h1
							font-family Constantia
							font-size 1.8em
							color _grey
							margin-bottom 12px
							
						h3
							font-family Futura
							font-size 0.8em
							font-weight bold
							text-transform uppercase
							color _yellow

				.lower
					
					p
						font-family Constantia
						font-size 1.1em
						color _grey
						
					.adminInfo
						margin-top 15px
						padding 10px
						
						border 1px solid lighten(_navy, 40%)
						background-color lighten(_navy, 80%)
						
						h3
							padding-bottom 10px
							
							font-family Futura
							font-size 1.0em
							font-weight bold
							text-transform uppercase
							color _navy
							
						p
							color _navy
							
							span
								display inline-block

							.bold
								width 170px
								font-weight bold
					
	> .lower
		display flex
		justify-content space-between
		border-bottom-left-radius  10px
		border-bottom-right-radius 10px
		background-color _yellow
		//background-color darken(_navy, 40%)
		
		> *
			display flex
			align-items center
			
		.left
			margin-left 14px
			
			.imageContainer
				text-align center
				width 22px
			
				.warning
					width  20px
					height 20px
					
					animation-name pulse
					animation-duration 1s
					animation-iteration-count infinite

		.right
			margin-right 14px

		a
			display inline-block
			padding 12px 13px

			font-family Futura
			font-weight bold
			font-size 0.84em
			text-transform uppercase
			text-decoration none
			color darken(_yellow, 55%)
			
			transition all 0.4s
			
			&:hover
				padding 12px 20px
				
@keyframes pulse {
	0% {
		width 15px
		height 15px
	}
	50% {
		width 20px
		height 20px
	}
	100% {
		width 15px
		height 15px
	}
}