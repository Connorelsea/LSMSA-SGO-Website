.dateContainer
	margin 0 auto
	padding 30px 0px
	margin-top 30px
	width 85%
	max-width 1000px

	border-bottom 1px solid lightslategrey

	display flex

	> .left
		width 30%
		flex-direction row


	> .right
		width 70%
		margin-left 35px

.dateTimeline:nth-child(0)
	border-top none !important

.mealContainer

	padding 10px 0px

	h1, h2
		text-align center
		font-family FuturaCond
		color lightslategrey

	.mealTitle
		font-size 1.6em

	.mealSubtitle
		color lighten(lightslategrey, 30%)
		font-size 1.2em
		padding 10px 0px


.reviewContainer
	margin 30px 0px
	background-color white
	border-radius 6px
	box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

	display flex
	flex-direction row

	> *
		padding 20px 20px

	> .left
		padding-right 0px
		text-align center

		.starContainer

			h4
				padding-top 8px
				text-transform uppercase
				font-family Futura
				font-weight bold
				text-align center

			h4.worst
				color #d36661

			h4.bad
				color #bf8b89

			h4.okay
				color #929292

			h4.good
				color #e0b264

			h4.best
				color #fec163

	> .right
		//width 100%
		font-family Futura
		position relative

		display flex
		align-items center

		.contentContainer

			> .content
				color darken(lightslategrey, 60%)
				line-height 1.2em
				font-size 1.3em

				.time
					text-transform uppercase
					text-align right
					font-size 0.6em
					font-weight bold
					color lighten(lightslategrey, 40%)
					padding-left 10px



.dateBox
	background-color white
	border-radius 6px
	box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);

	> .upper-date
		padding 20px
		text-align center
		overflow none
		background-image url("/images/mab.jpg")
		border-top-left-radius 6px
		border-top-right-radius 6px

		h2, h3
			padding 10px
			color white
			font-family FuturaCond

		h2
			font-size 4em

		h3
			font-size 1.6em