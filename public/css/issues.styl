/*
 * Issue Submission Page
 *
 * This section contains the specific CSS for the
 * issue submission page and its components
 */

.submitIssue
	
	.header

		width 400px
		margin 0 auto
		margin-top 50px
		margin-bottom 50px
		
		text-align center
		
		*
			padding-bottom 12px
		
		h2
			color _navy
			font-family Futura
			font-weight bold
			text-transform uppercase
			font-size 1.2em
	
	.content
		padding-bottom 40px
		
		color _navy
		
		font-family Futura
		font-size 1.3em

		line-height 1.5em
		
		p
			min-width 200px

	.form
		padding-top 120px
		padding-bottom 100px
		display flex
		justify-content center
		flex-direction row
		width 100%
		
		background-image url("/images/mab.jpg")
		background-attachment fixed
		background-size  cover
		background-color alpha(_grey, .5)
		
		form
			width 85%

		.line
			display flex
			align-items left
			flex-direction column
			
			padding-bottom 30px

			.label
				width 240px

				text-align center
				font-family Futura
				font-weight bold
				text-transform uppercase
				font-size 1.4em
				color _navy
				
				padding 10px
				
				background-color lighten(_grey, 60%)
				
			textarea
				min-height 200px
				
			input, select, textarea
				height 35px
				border none
				border-bottom 4px solid _navy
				padding 15px
				
				outline none

				font-family Futura
				font-weight normal
				font-size 1.5em
				color _navy
				background-color lighten(_grey, 50%)
				box-shadow 0 6px 8px -1px rgba(50, 50, 50, 0.40)
				
				//background: linear-gradient(to right, #a2b6e5 0%,#ebebeb 39%,#ebebeb 39%,#ebebeb 100%);
				
				transition all 0.4s
				
				&:focus
					padding 20px