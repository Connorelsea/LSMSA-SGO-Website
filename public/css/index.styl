/*
 * Import Nib & CSS Reset
 */
 
@import 'nib'
global-reset()

/*
 * Global Colors
 */
 
_grey   = #EBEBEB
_navy   = #1B2E5D
_yellow = #FEBB47
_green  = #40AB6F

/*
 * Global Styling
 */

.bar
	width 100%
	
.innerBar
	margin 0 auto
	
	width     1000px
	max-width 1000px
	min-width 1000px
	
/*
 * Header and Navigation
 */
 
.barMain
	background-color _grey

// Header (Whole)

header
	display flex
	flex-wrap nowrap
	justify-content space-between
	align-items center

	padding-top 50px
	padding-bottom 50px

// Image/Logo
	
header .image img
	width 400px

// Navigation Bar

header nav ul li
	display inline-block
	position relative
	
	padding 13px
	
	font-family "Arial"
	font-weight normal
	font-size 1em
	
	// Removed because currently animating inline
	// the sub ul lists does not work.	
	// transition: all 0.4s

header nav > ul > li
	font-weight bold

header nav ul li:hover
	background-color lighten(_grey, 50%)
	
header nav ul li a
	text-decoration none
	color _navy

header nav > ul > li > a
	text-transform uppercase

header nav ul li ul
	padding 0
	position absolute
	top 40px
	min-width 200px
	opacity 0
	visibility hidden

	transition: visibility 0s linear 0.5s, opacity 0.5s linear;
	
header nav ul li:hover ul
	display block
	opacity 1
	visibility visible
	
	transition-delay:0s;
	
header nav ul li .login
	right 0px
	
header nav ul li .sub
	left 0px
	box-shadow 0 6px 4px -2px rgba(50, 50, 50, 0.40)

header nav ul li ul li
	display block
	
	max-width 250px
	min-width 250px
	width     250px
	
	background lighten(_grey, 50%)
	
header nav ul li ul li:hover
	background-color lighten(_navy, 90%)

header nav ul li ul li a
	transition all 0.4s

header nav ul li ul li:hover a
	padding-left 10px
	
header nav ul li ul:last-child
	border-bottom 3px solid lighten(_navy, 30%)
	border-width 0px
	transition border-width 0.4s
	
header nav ul li:hover ul:last-child
 	border-width 3px
	
header nav ul li ul a
	display block
	
header nav ul li ul li .desc
	font-size .7em
	line-height 1.5em
	
@media screen and (max-width: 1000px)
	header nav ul li
		display block
	
	header nav ul li ul
		visibility visible
		display block
		
	header nav ul li ul li
		display block
	
// Accent bar below bar main

.accentBar
	height     16px
	min-height 16px
	max-height 16px
	
	background-color lighten(_grey, 40%)
	
/*
 * Action Bar and Call to Action
 */

.actionBar .action
	padding-top    150px
	padding-bottom 150px
	margin 0 auto
	width 70%
	
.actionBar .action div
	text-align center

// "Make a difference" title

.actionBar .header
	font-size 2.4em
	
.actionBar .header *
	display inline

.actionBar .header .primary
	font-style oblique

.actionBar .header .secondary
	font-weight bold

// Buttons and interaction

.actionBar .sub
	margin-top 30px

.actionBar .sub .button
	padding 10px
	margin  10px
	
	width 20%
	display inline-block
	
	font-family "Arial"
	font-size 1em
	font-weight bold
	text-decoration none
	text-transform uppercase
	border 3px solid _navy

.actionBar .sub .secondary
	color _navy

.actionBar .sub .primary
	background-color _navy
	color white