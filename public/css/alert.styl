.alertHtml
	height 100%
	background-image url("/images/DarkBackground.png")
	background-size cover
	
	display flex
	justify-content center
	align-items center

	.alertBody
		box-shadow  0px 0px 20px 0px rgba(50, 50, 50, 1)
		box-sizing border-box
		width 33%
		background-color _grey
		padding 30px
		
		display flex
		justify-content center
		text-align center
		
		> *
			color _navy
			
		.starHeader
			margin-bottom 24px
			
			.one
				margin-bottom 10px
				
			.two
				margin-top 10px
		
			h1
				font-family Futura
				font-weight bold
				font-size 1.7em
				text-transform uppercase
			
		p
			margin 50px 0px
			font-family Futura
			font-size 1.3em
			line-height 1.4em
			
		.lower
			margin-top 10px
			margin-bottom 7px
			
			display flex
			justify-content center
			
			.button
				width 30%
				font-size 0.9em
				border 4px solid _navy
				color _navy
				transition all 0.4s
				
				&:hover
					background-color _navy
					color _grey
			