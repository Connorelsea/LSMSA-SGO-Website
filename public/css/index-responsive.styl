@media screen and (max-width: 1000px)

	.alertHtml
		.alertBody
			width 95%

	.submitIssue
		.header
			width 100%
			
		.content
			padding-bottom 40px
			
			color _navy
			
			font-family Futura
			font-size 1em

			line-height 1.2em
			
			p
				width 80%
				min-width 100px
				
		.form
			.submit
				input
					width 90%

	// .t-header
		
	// 	height 300px
		
	// 	.t-title
	// 		margin-top 100px

	// 	h1
	// 		font-size 2em
	// 	h2
	// 		font-size 1.8em
			
	// 	.ch1
	// 		font-size 1.4em !important
		
	// 	.ch2
	// 		font-size 1em !important

	.singleIssue .container
		padding 10px

	.body
		top 100px !important
		
		.container
			display flex
			flex-direction column
			
			.left
				width     100%
				min-width 100%
				max-width 100%
				padding-bottom 20px
				
				.top
					padding-top 20px
					padding-bottom 0px
					
					h1
						text-align center
						font-size 1.8em
					
					h3
						text-align center
						
				.bottom
					p
						text-align center
						font-size 1.2em
				
			.right
				width     100%
				min-width 100%
				max-width 100%
				
				.stats
					width 100%
					flex-direction row
					justify-content center
					text-align center
					
					.left
						display flex
						flex-direction row
						justify-content space-between
						padding-bottom 0px
						
						width 90%
						min-width 90%
						max-width 90%
						
						> *
							display inline-block
						
						h3
							display flex
							flex-direction column
							justify-content center
							align-items center
							
							width auto
							font-size 1em
						.word
							padding-left 0px
							text-align right !important
						.number
							width auto !important
							text-align right
				
				.right
					display none !important
				

	.navigationHeader
		display flex
		flex-direction column

	.barMain
		height auto
		
		ul
			li
				padding 5px
				
		.upperPart
			width 100%
			display flex
			flex-direction row
			justify-content space-around
			align-items center
			
			.navImage
				display flex
				justify-content flex-end

		header

			.image .img
				padding 20px
				width 250px
			
			.navImage
				display block

			nav
				//display flex
				display none
				
				ul
					position static
					font-size 1.4em
					display flex
					flex-direction column
					
					li
						font-size 0.9em
						padding 5px
						display block
							
						ul
							background none
							background-color _grey
							box-shadow none
							opacity 1
							visibility visible
							display flex
							flex-direction column
							
							li
								background-color _grey
								max-width auto
								min-width auto
								width     auto
								padding 5px
								font-size 0.6em

	.innerBar
		width     100%
		min-width 100%
		max-width 100%
		
	/*
	 * Home Page
	 *
	 * Styles specific to the home page and
	 * making its content responsive.
	 */
	 
	.actionBar .action
		padding-top    10px
		padding-bottom 60px

	.background
		> *
			display none
	 	
	.action .sub
		.button
			width 80%
		
	.newsBar
		.news
			display flex
			flex-direction column
			
			.story
				width 100%
				text-align center
				padding-bottom 30px
				
	.barIssues
		
		.inner
			
			.header > .upper
				display flex
				flex-direction column
				
				.title
					padding 20px 0px
					
				.buttons
					width 100%
					
					> .button
						width 80%
						margin-top 20px
						margin-left 0px
				
				> *
					display flex
					flex-direction column
					justify-content center
					align-items center
					
			.issueContainer
				
				a
					width 65%

		.constrainContainer
			width 100%
			
	/* 
	 * Issue Bar
	 */
	 	
	.issueBox
		display flex
		flex-direction column
		justify-content center
		align-items center
		
		width 100%
		
		.voteStuff
			width 90%

		.topContainer.votes
			background-color _grey
			
			.score
				color _navy !important
				
			.stars
				display none
				
			.bottom
				display none
		
		> *
			margin 5px !important
		
		.topContainer
			width 90% !important
			
		.topContainer.content
			height 200px
			
			.top .bottom
				display none
			
		.social
			background none
			
			> .top
				padding-top 5px !important
				width 100%
				flex-direction row !important
				justify-content space-around
				
				a
					width 30% !important
					font-weight bold
					color _navy !important
					font-size 1em !important
			
			> .bottom
				display none !important
				
@media screen and (max-width: 340px)
	.barMain
		header

			.image .img
				padding 20px
				width 83%
			
			.navImage
				padding-right 10%
				display block